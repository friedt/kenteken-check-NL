{
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:jest/recommended"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "rules": {
        "class-methods-use-this": "error",
        "no-unused-expressions": "error",
        "prefer-const": "error",
        "no-console": 2
    },
    "ignorePatterns": [
        "src/*.spec.ts"
    ]

}
